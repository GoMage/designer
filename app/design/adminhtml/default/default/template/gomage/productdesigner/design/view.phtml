        <div class="entry-edit">
            <div class="entry-edit-head">
                <h4 class="icon-head head-edit-form fieldset-legend"><?php echo $this->__('Additional Instructions');?></h4>
            </div>
            <div class="fieldset fieldset-wide">
                <table cellspacing="0" class="form-list">
                    <tbody>
                    <tr>
                        <td class="value">
                            <textarea style="height:7.5em" name="comment" class="textarea" rows="2" cols="15" disabled="disabled"><?php echo $comment; ?></textarea>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    <?php endif;?>
    <script type="text/javascript">
        function downloadImage(url) {
            location.href = url;
        }
    </script>
