<?php if (!$_collectionSize): ?>
    <div class="message"><?php echo $this->__('You have no designed products') ?></div>
<?php else: ?>
    <div style="overflow: hidden; padding-bottom: 25px;">
        <?php $i=0; foreach ($_imagesCollection as $_image): ?>
            <?php if ($i++%$_columnCount==0): ?>
            <ul class="products-grid">
            <?php endif ?>
            <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>" style="float: left; clear:left; margin:0 0 20px">
